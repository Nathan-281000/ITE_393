<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ite393_2nd_bg"
    tools:context=".course">




    <ScrollView
        android:layout_marginVertical="20dp"
        android:id="@+id/course"
        android:layout_width="match_parent"
        android:layout_height="625dp"
        android:layout_marginTop="3dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.58"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/aboutView_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="gravity"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center"
                android:background="@drawable/rounded_border"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="CITE"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginTop="@dimen/_20dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:gravity="center"/>



            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/cite"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_gravity="center"
                android:background="@drawable/rounded_border"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="MLS"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginTop="@dimen/_20dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:gravity="center"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/mls"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_gravity="center"
                android:background="@drawable/rounded_border"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="CEA"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginTop="@dimen/_20dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:gravity="center"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/cea"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_gravity="center"
                android:background="@drawable/rounded_border"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="CMA"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginTop="@dimen/_20dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:gravity="center"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/cma"
                android:layout_gravity="center"
                />







        </LinearLayout>
    </ScrollView>

    <android.widget.Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/Back"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutView"
        app:layout_constraintVertical_bias="0.477" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/aboutView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/phinmaedlogo" />


</androidx.constraintlayout.widget.ConstraintLayout>