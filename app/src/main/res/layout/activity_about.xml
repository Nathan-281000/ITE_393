<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ite393_2nd_bg"
    tools:context=".about">


    <ScrollView
        android:layout_marginVertical="20dp"
        android:id="@+id/aboutView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.58"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/aboutView_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/aboutbck"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:text="@string/Back"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.954" />



            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_gravity="center"
                android:background="@drawable/rounded_border"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="About PHINMA Education"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:gravity="center"/>


            <TextView
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:text="@string/about1"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"/>

            <TextView
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:text="Our Mission"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:gravity="center"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="To make lives better through education"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"/>

            <TextView
                android:paddingTop="20dp"
                android:layout_gravity="center"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:text="Fulfilling our mission through education"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:gravity="center"/>

            <TextView
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/part3"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="@string/about3"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"/>

            <TextView
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="@string/about4"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"/>

            <TextView
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="@string/about5"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"/>


            <TextView
                android:paddingTop="20dp"
                android:layout_gravity="center"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="Our Values"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:gravity="center"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="@string/about2"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"/>


            <TextView
                android:paddingTop="150dp"
                android:layout_gravity="center"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="Come Visit Us."
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"/>

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/about_2_pic"
                tools:ignore="ContentDescription" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Urdaneta Campus"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/maps"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="16sp"
                android:text="McArthur Highway, Urdaneta City, 2428, Pangasinan"
            />

            <ImageView
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/about_pic_3"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Dagupan Campus"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/maps_2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:clickable="true"
                android:textColor="@color/black"
                android:focusable="true"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="16sp"
                android:text="28WV+R2R, Arellano St, Downtown District, Dagupan, 2400 Pangasinan" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginLeft="140dp"
                android:id="@+id/manual"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Manual"/>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>